<div class='welcome_stats'

<% if @current_user %>
<h2>Useremail: <%= @current_user.email %></h2>

<% if @current_user.rounds.length != 0%>
<h2>Your Stats</h2>

<table class="stats">

	<tr>

		<th>Round</th>

	  <th>Deck</th>

		<th>Guessed</th>

		<th>Correct</th>		

		<th>Incorrect</th>		

	</tr>
	<% @current_user.rounds.each do |r| %>
	<tr>
		<td><%= r.id %></td>

	  <td><%= r.deck.name %></td>

		<td><%= r.guesses.length %></td>

		<td><%= r.guesses.select {|g| g.correct}.count %></td>		

		<td><%= r.guesses.select {|g| g.correct == false}.count %></td>		

	</tr>
		<% end %>
</table>
<% end %>

<% end %>
</div>